---
import {languages, type LanguageTag} from '../../i18n/i18n';
import {switchUrlLang} from '../../i18n/i18nUtils';
---

<ul>
  {
    Object.entries(languages).map(([langTag, label]) => (
      <li>
        <a href={switchUrlLang(Astro.url, langTag as LanguageTag)}>{label}</a>
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    margin-bottom: 10px;
  }

  a {
    display: block;
    padding: 10px;
    background-color: #f2f2f2;
    text-decoration: none;
    color: #333;
    border-radius: 5px;
  }

  a:hover {
    background-color: #ddd;
  }
</style>
