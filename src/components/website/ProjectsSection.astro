---
import {Image} from 'astro:assets';
import {projectsData} from '../../data/website/ProjectsData';

const projects = projectsData.data.find(
  (project) => project.langTag === 'en'
)!.content;
---

<div id="projects-section-container">
  <div class="projects-grid">
    {
      projects.map((project) => (
        <div class="project-container">
          <Image class="project-image" src={project.image} alt="" />
          <div class="project-overlay">
            <h3 class="project-title">{project.name}</h3>
            <div class="project-description-container">
              <p>{project.description}</p>
              <div class="project-technologies-container">
                {project.technologies.map((technology) => (
                  <div class="project-technology-container">
                    <div style="margin-right: 5px;">{technology.name}</div>
                    <div class="project-technology-icon-container">
                      <Image
                        class="project-technology-icon"
                        src={technology.icon}
                        alt={`${technology.name} logo`}
                      />
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  #projects-section-container {
    margin-top: 2rem;
  }
  h2 {
    text-align: center;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-flow: row;
    gap: 2rem;
    justify-content: center;
    align-content: center;
  }
  .project-image {
    width: 100%;
    height: auto;
    max-height: 40rem;
    border-radius: 10px;
    image-rendering: optimizeQuality;
    object-position: center;
    object-fit: cover;
  }
  .project-container {
    margin: auto;
    position: relative;
  }
  .project-container::after {
    content: '';
    position: absolute;
    top: 48%;
    left: 1%;
    width: 98%;
    height: 5%;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.6s;
    box-shadow: 0 0 10rem 8rem rgb(var(--accent-color-1));
    z-index: -1;
  }
  /* TODO: Adapt to devices that can't hover, aka touch devices */
  .project-container:hover::after {
    opacity: 0.8;
  }
  .project-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    text-align: left;
  }
  .project-title {
    margin: 0.6rem 0 0 0;
  }
  .project-description-container {
    visibility: hidden;
    height: 0px;
    opacity: 0;
    transition:
      height 0.6s,
      opacity 0.6s 0.3s;
  }
  /* TODO: Adapt to devices that can't hover, aka touch devices */
  .project-container:hover .project-description-container {
    visibility: unset;
    opacity: 1;
    height: 5rem;
  }
  .project-technologies-container {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .project-technology-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 15px;
  }
  .project-technology-icon-container {
    height: 2rem;
    width: 2rem;
    background-color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .project-technology-icon {
    width: 1rem;
    height: auto;
  }
</style>
