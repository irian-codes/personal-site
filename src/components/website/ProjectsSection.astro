---
import {Image} from 'astro:assets';
import medwayMobileAppImg from '../../assets/images/projects/medway/medway-joined.jpg';

const projectImages = [
  medwayMobileAppImg,
  medwayMobileAppImg,
  medwayMobileAppImg,
];
---

<div id="projects-section-container">
  <h2>My projects</h2>
  <div class="projects-grid">
    {
      projectImages.map((src) => (
        <Image class="project-image" src={src} alt="" />
      ))
    }
  </div>
</div>

<style>
  #projects-section-container {
    margin-top: 2rem;
  }
  h2 {
    text-align: center;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  .project-image {
    max-width: 100%;
    height: 35rem;
    border-radius: 10px;
    image-rendering: optimizeQuality;
    object-position: center;
    object-fit: cover;
    margin: auto;
  }
</style>
