---
import {Image} from 'astro:assets';
import medwayMobileAppImg from '../../assets/images/projects/medway/medway-joined.jpg';

const projectImages = [
  medwayMobileAppImg,
  medwayMobileAppImg,
  medwayMobileAppImg,
];
---

<div id="projects-section-container">
  <h2>My projects</h2>
  <div class="projects-grid">
    {
      projectImages.map((src) => (
        <div class="image-container">
          <Image class="project-image" src={src} alt="" />
          <div class="image-overlay">
            <h3 class="image-title">Medway App</h3>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  #projects-section-container {
    margin-top: 2rem;
  }
  h2 {
    text-align: center;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  .project-image {
    max-width: 100%;
    height: 35rem;
    border-radius: 10px;
    image-rendering: optimizeQuality;
    object-position: center;
    object-fit: cover;
  }
  .image-container {
    margin: auto;
    position: relative;
  }
  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    text-align: left;
  }
  .image-title {
    margin: 0.4rem 0 0.6rem 0;
  }
</style>
