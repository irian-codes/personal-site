---
import {Image} from 'astro:assets';
import reactLogoSvg from '../../assets/images/icons/react-logo.svg';
import medwayMobileAppImg from '../../assets/images/projects/medway/medway-joined.jpg';

const projectImages = [
  medwayMobileAppImg,
  medwayMobileAppImg,
  medwayMobileAppImg,
];
---

<div id="projects-section-container">
  <h2>My projects</h2>
  <div class="projects-grid">
    {
      projectImages.map((src) => (
        <div class="image-container">
          <Image class="project-image" src={src} alt="" />
          <div class="image-overlay">
            <h3 class="image-title">Medway App</h3>
            <div class="image-description-container">
              <p>
                Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                Officia natus libero voluptas, eum corporis iste.
              </p>
              <div class="image-technologies-container">
                <div class="image-technology-container">
                  <div style="margin-right: 5px;">React Native</div>
                  <Image src={reactLogoSvg} alt="React (Native) logo" />
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  #projects-section-container {
    margin-top: 2rem;
  }
  h2 {
    text-align: center;
  }
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  .project-image {
    max-width: 100%;
    height: 35rem;
    border-radius: 10px;
    image-rendering: optimizeQuality;
    object-position: center;
    object-fit: cover;
  }
  .image-container {
    margin: auto;
    position: relative;
  }
  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    text-align: left;
  }
  .image-title {
    margin: 0.6rem 0 0 0;
  }
  .image-description-container {
    visibility: hidden;
    height: 0px;
    opacity: 0;
    transition:
      height 0.6s,
      opacity 0.6s 0.3s;
  }
  .image-container:hover .image-description-container {
    visibility: unset;
    opacity: 1;
    height: 5rem;
  }
  .image-technologies-container {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .image-technology-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-right: 15px;
  }
</style>
